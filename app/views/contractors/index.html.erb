<% clients_with_employees = Client.with_employees %>

<div class="container table-responsive">
  <h1>Contractors</h1>
  <table class="table table-hover table-sm">
    <thead class="thead-dark">
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Partner Company Identifier</th>
        <th>Clients</th>
        <th>Clients without Employees</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @contractors.each do |contractor| %>
        <tr>
          <td><%= contractor.first_name %></td>
          <td><%= contractor.last_name %></td>
          <td><%= contractor.partner_company.identity %></td>
          <td><ul>
            <% contractor.partner_company.clients.each do |client| %>
              <li><%= link_to client.full_name, client_path(client) %></li>
            <% end %>
          </ul></td>
          <td><ul>
            <% (contractor.clients - clients_with_employees)
                  .each do |client| %>
              <li><%= link_to client.full_name, client_path(client) %></li>
            <% end %>
          </ul></td>
          <td><%= link_to 'Show', contractor %></td>
          <td><%= link_to 'Edit', edit_contractor_path(contractor) %></td>
          <td><%= link_to 'Destroy', contractor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <% if @contractors.respond_to? :total_pages %>
    <%= paginate @contractors %>
  <% end %>
</div>

<div class="container">
  <%= link_to 'New Contractor', new_contractor_path, class: 'btn btn-primary' %>
</div>
